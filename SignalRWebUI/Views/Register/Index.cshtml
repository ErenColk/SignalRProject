
@{
    Layout = null;
}

@model RegisterDto
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>SignalR Yeni Kayıt</title>
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<link rel="stylesheet" type="text/css" href="~/colorlib-regform-32/css/nunito-font.css">
	<link rel="stylesheet" href="~/colorlib-regform-32/css/style.css" />
</head>
<body class="form-v6">
	<div class="page-content">
		<div class="form-v6-content">
			<div class="form-left">
				<img src="~/colorlib-regform-32/images/Sauce1.jpg" alt="form" style="width:484px;height:661px">
			</div>
			<form class="form-detail" action="#" method="post">
				<h2>Kayıt Formu</h2>
				<div class="form-row">
					<input type="text"  id="full-name" class="input-text" asp-for="Name" placeholder="Adınız" required>
				</div>
				<div class="form-row">
					<input type="text"  id="full-name" class="input-text" asp-for="Surname" placeholder="Soyadınız" required>
				</div>
				<div class="form-row">
					<input type="text" id="full-name" class="input-text" asp-for="Username" placeholder="Kullanıcı Adınız" required>
				</div>
				<div class="form-row">
					<input type="text"  id="your-email" class="input-text" asp-for="Mail" placeholder="Email Addresiniz" required pattern="[^@@]+@@[^@@]+.[a-zA-Z]{2,6}">
				</div>
				<div class="form-row">
					<input type="password"  id="password" class="input-text" asp-for="Password" placeholder="Şifreniz" required>
				</div>
				<div class="form-row-last">
					<button name="register" class="register">Kayıt Ol</button>
				</div>
			</form>
		</div>
	</div>
</body>
</html>